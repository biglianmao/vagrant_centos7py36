{
    "variables": {
        "box_version": "1.0.{{isotime \"2006-01-02\"}}",
        "vagrant_cloud_access_token": "{{env `VAGRANT_ACCESS_TOKEN`}}",
        "vagrant_cloud_box_tag": "{{env `VAGRANT_BOX_TAG`}}"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "communicator": "ssh",
            "ssh_timeout": "10m",
            "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
            "iso_checksum_type": "sha256",
            "iso_url": "http://mirrors.cmich.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
            "disk_size": 30000,
            "guest_os_type": "RedHat_64",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "http_directory": "http",
            "shutdown_command": "sudo -S shutdown -P now",
            "post_shutdown_delay": "1m",
            "boot_command": [
                "<wait><esc><esc>",
                "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart_me<enter>"
            ],
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--audio", "none"],
                ["modifyvm", "{{.Name}}", "--usb", "off"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "yum -y update",
                "yum install -y epel-release",
                "yum install -y ansible",
                "yum install -y kernel-devel"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible_local.yml",
            "role_paths": [
                "./roles/prep_base_image",
                "./roles/update_image",
                "./roles/python_install"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "yum remove -y ansible",
                "rm -rf /tmp/*"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "keep_input_artifact": false
            },
            {
                "type": "vagrant-cloud",
                "access_token": "{{user `vagrant_cloud_access_token`}}",
                "box_tag": "{{user `vagrant_cloud_box_tag`}}",
                "version": "{{user `box_version`}}",
                "no_release": "true",
                "version_description": "CentOS 7 Python3.6 GuestAdditions 5.1.26 Base box latest yum updates as of {{isotime \"2006-01-02\"}}\n- Python3.6"
            }
        ]
    ]
}

